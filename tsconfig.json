{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./lib",
    "moduleResolution": "nodenext",
    "target": "es2015",
    "module": "nodenext",
    "newLine": "LF",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*"]
}
